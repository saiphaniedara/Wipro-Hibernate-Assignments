<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.wipro.bean.Product" table="product">
		<id name="productId" column="productId" type="integer">
			<generator class="sequence"></generator>
		</id>
		<property name="productName" column="productName" type="string"></property>
		<property name="price" column="price" type="integer"></property>
	</class>
</hibernate-mapping>